package improbable.npc;

type WizardFSMState {
  enum StateEnum {
    IDLE = 0;
    MOVING_TO_TARGET = 1;
	MOVING_TO_POSITION = 2;
    ATTACKING_TARGET = 3;
    DEFENDING_TARGET = 4;
    ON_FIRE = 5;
  }  
}

type NPCWizardData {
  WizardFSMState.StateEnum current_state = 1;
  EntityId target_entity_id = 2;
  Vector3f target_position = 3;
}

component NPCWizard {
  id = 1802;
  data NPCWizardData;
}
